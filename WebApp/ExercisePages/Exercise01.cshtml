@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 01");

    var myname = Request.Form["dataentry"];
    var thebutton = Request.Form["theButton"];

    string choices = "";
}

@section banner {
    <h1>@Page.Title</h1>
}

@if (IsPost)
{
    //this true path is done IF this page is returning
    //from the previous sending

    //IF you have multiple buttons on your form, you SHOULD
    //determine which button was pressed; thus; dictating WHICH
    //logic is to be EXECUTED
    if (thebutton.Equals("submit"))
    {
        //the Press Me button was pressed
        if (string.IsNullOrEmpty(myname))
        {
            <p>You should enter your name.</p>
        }
        else
        {
            <p>Well: Hello there @myname</p>
        }
    }
    else
    {
        //the Clear button was pressed
        myname = "";
        <p>You pressed the reset button</p>
    }
}
else
{
    // use to initialize items on your form BEFORE it is sent
    // to the user for the FIRST time.
    <p>this is the first time on this page.</p>
}


<form id="theform" method="post">


    <label id="label1" for="dataentry">Customer Name:</label>&nbsp;&nbsp;
    <input type="text" id="dataentry" name="dataentry"
           value="@myname" />
    <br /><br />
    <div class="row">
        <div class="offset-1">
            <button type="submit" id="theButton" name="theButton"
                    value="submit" class="btn btn-primary">
                Submit
            </button>&nbsp;&nbsp;
            <button type="submit" id="theButton" name="theButton"
                    value="reset" class="btn btn-light">
                Reset
            </button>
        </div>
    </div>
</form>

@if (IsPost)
{
    //you can delay retreiving your data input until you actually have
    //  a postback
    var thebutton1 = Request.Form["theButton"];
    choices = Request.Form["GameGroup"];
    if (thebutton.Equals("Reset", StringComparison.OrdinalIgnoreCase))
    {
        choices = "";
    }
    else
    {
        if (choices.IsEmpty())
        {
            <p style="color:firebrick">You don't like to play games?</p>
            choices = "";
        }
        else
        {
            //for a checkbox list, your choices will be a set of strings
            //   separated by a delimiter (in this case is a comma)
            //to divide up this set of strings use the .Split(delimiter) method
            //to process the collection of strings in choices, consider using foreach
            <p>
                I see you like to use the following platforms:
                <ul>
                    @foreach (var platform in choices.Split(','))
                    {
                        <li>@platform</li>
                    }
                </ul>
            </p>
        }
    }
}
else
{
    choices = "";
}


<form id="theform" method="post">
    <div class="row">
        <div class="offset-1">
            <label id="lblGameGroup">Please select the meal entries of your choice:</label><br />
            <input type="checkbox" id="GameGroup" name="GameGroup" value="Steak"
                   @(Array.IndexOf(choices.Split(','), "Steak") >= 0 ? "checked" : "") />Steak<br />
            <input type="checkbox" id="GameGroup" name="GameGroup" value="Seafood"
                   @(Array.IndexOf(choices.Split(','), "Seafood") >= 0 ? "checked" : "") />Seafood<br />
            <input type="checkbox" id="GameGroup" name="GameGroup" value="Vegatables"
                   @(Array.IndexOf(choices.Split(','), "Vegatables") >= 0 ? "checked" : "") />Vegatables<br />

        </div>
    </div>
    <div class="row">
        <div class="offset-1">
            <button type="submit" id="theButton" name="theButton"
                    value="submit" class="btn btn-primary">
                Submit
            </button>&nbsp;&nbsp;
            <button type="submit" id="theButton" name="theButton"
                    value="reset" class="btn btn-light">
                Reset
            </button>
        </div>
    </div>
</form>
